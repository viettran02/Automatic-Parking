#INCLUDE <16F887.H>
#DEVICE ADC=10
#FUSES NOWDT, PUT, HS, NOPROTECT, NOLVP
#USE DELAY(CLOCK=20M)
#define sl1 pin_a0
#define sl2 pin_a1
#define sl3 pin_a2
#define sl4 pin_a3
#include<tv_lcd.c>
//#include <Ultrasonic.c>

UNSIGNED INT16 KQADC=0;

void checknhietdo()
{
    
    SET_TRIS_C(0x00); SET_TRIS_A(0xFE);
    SETUP_ADC(ADC_CLOCK_DIV_32);
    SETUP_ADC_PORTS(SAN4);
         output_c(0x01);
         SET_ADC_CHANNEL(4); delay_ms(10);
         KQADC=READ_ADC();
         DELAY_MS(10);
         KQADC= KQADC /2.046;
      //   delay_ms(100);
    If(KQADC >= 50)
        {OUTPUT_C(0x00); DELAY_MS(200);
        OUTPUT_C(0x00); OUTPUT_B(0x00); 
        lcd_command(0x80); delay_us(10); lcd_data("!CanhBao!  "); 
        lcd_command(0xc0); delay_us(10); lcd_data("!!!!!!!!!!!!!");
        }}

void slot1()
   {
   lcd_command(0x80);delay_us(10);
   lcd_data("Welcome!  ");
   lcd_command(0xc0);delay_us(10);
   lcd_data("----> Slot1    ");  
      
   output_b(0x0f); output_low(pin_b1); output_low(pin_b2); output_low(pin_b3); output_high(pin_b4); 
   //dan duong vao slot1
   delay_ms(50);
   }
void slot2()
   { 
   lcd_command(0x80);delay_us(10);
   lcd_data("Welcome!  ");
   lcd_command(0xc0);delay_us(10);
   lcd_data("----> Slot2   "); 
   output_low(pin_b4); output_b(0x0f); output_low(pin_b2); output_low(pin_b3); output_high(pin_b5); delay_ms(50);
   //dan duong vao slot 2 , slot da su dung: slot 1
   }  
void slot3()
   { 
   lcd_command(0x80);delay_us(10);
   lcd_data("Welcome!  ");
   lcd_command(0xc0);delay_us(10);
   lcd_data("----> Slot3   "); 
   output_low(pin_b5); output_b(0x0f); output_low(pin_b3); output_high(pin_b6); delay_ms(50);
   //khi slot1 va slot2 co xe -> dan duong vao slot3   
   }  
void slot4()
   { 
   lcd_command(0x80);delay_us(10);
   lcd_data("Welcome!  ");
   lcd_command(0xc0);delay_us(10);
   lcd_data("----> Slot4    "); 
   output_low(pin_b6); output_b(0x0f); output_high(pin_b7); delay_ms(50);
   //khi slot1 slot2 slot3 co xe --> dan duong vao slot 4
   }  

void full()
   {
    lcd_command(0x80);delay_us(10);
   lcd_data("Sorry!   ");
    lcd_command(0xc0);delay_us(10);
    lcd_data("No slot!     "); 
    output_b(0x00); delay_ms(100);
   }

void free()
   {
   slot1();   
   }


void danduong() //dan duong bang led
{
   while(true)
   {
      free(); checknhietdo();
      while(!input(sl1)) //co xe o slot 1 
      {
      slot2(); checknhietdo();
         while(!input(sl2)) //co xe o slot 1 va 2
         {
         slot3(); checknhietdo(); 
         while(input(sl1)==1) slot1(); checknhietdo(); //co xe o slot 2
         
            while(!input(sl3)) //co xe o slot 1, 2 va 3
            {
            slot4(); checknhietdo();
            while(input(sl2)==1) {slot2(); checknhietdo(); //co xe o slot 1 va 3
                                 while(input(sl1)==1) slot1(); checknhietdo();} //co xe o slot 3
            while(input(sl1)==1) slot1(); checknhietdo(); //co xe o slot 2 va 3
            
               while(!input(sl4)) //co xe o slot 1, 2, 3 va 4
               {
               full(); checknhietdo();
               while(input(sl1)==1) {slot1(); checknhietdo();} //co xe o slot 2, 3 va 4
               while(input(sl2)==1) {slot2();  checknhietdo(); //co xe o slot 1, 3 va 4
                                     while(input(sl1)==1) slot1(); checknhietdo(); } //co xe o slot 3 va 4  
               while(input(sl3)==1) {slot3(); checknhietdo(); //co xe o slot 1, 2 va 4
                                     while(input(sl2)==1) {slot2(); checknhietdo(); //co xe o slot 1 va 4
                                                           while(input(sl1)==1) slot1(); checknhietdo(); } //co xe o slot 4
                                     while(input(sl1)==1) slot1(); checknhietdo(); } //co xe o slot 2 va 4
                                     
              }
            }
         }
      
      }

      
   }}
   
   
