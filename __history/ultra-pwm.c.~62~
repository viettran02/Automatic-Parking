#include <16f887.h>
#fuses HS, NOMCLR, NOBROWNOUT, NOLVP
#use delay(clock = 20MHz)
#define trigger pin_a7
#define echo pin_a6
#define motor_en pin_c7
float kcs;
int16 dist;

void tao_xung_trigger()
{ 
output_high(trigger); 
delay_us(100); 
output_low(trigger);
}

