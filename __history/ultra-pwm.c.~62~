int16 get_distance()    //nhan vao khoang cach tra ve va do do rong tu echo
   {
     kcs = 0;
     set_timer1(0);
     while(input(PIN_A6) && (kcs < 25000))
       kcs = get_timer1();
     return i;
     delay_ms(5000);
   }

void check_xe()
{
if(dist<10)
   output_high(pin_c0);
else if(dist>10)
   output_low(pin_c0);
}

void main()
{ 
set_tris_c(0x00);
setup_timer_1(t1_disabled );
while(true)
{ 
tao_xung_trigger(); 
get_distance();
 kcs=kcs*0.8;
 kcs = (kcs/58); 
 delay_ms(500);
 dist = (unsigned int8)kcs;
 check_xe();
 }
}
